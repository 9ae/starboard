extends base.pug

block scripts
  script(
    type="text/javascript"
    src="/js/fandom.js"
  )

block content
  if 'characters' in cats
    div(class="tab-menu")
      ul(class="tab-links")
        each val, index in cats
          li(class= index === 'characters' ? "active": "")
            a(href="#")= index
      div(class="tab-details")
        div(class="grid blurb")
          each i in [0,1,2,3,4,5]
            div(class="grid-item 1/3 compact-1/2")
              a(href="#")= cats.characters[i]
        div(id="theRest" class="grid rest")
          - var n = 6
          while n < cats.characters.length
            div(class="grid-item 1/3 compact-1/2")
              a(href="#")= cats.characters[n]
            - n++
        p(class="show-more")
          a(href="#" onClick="showMore(this)") Show More
  
  div(class="container")
    div(class="grid")
      div(class="grid-item 1/1")
        h3 Trending inside #{title}
      div(class="grid-item 2/3 compact-1/1")
        input(
          type="search"
          class="search"
          placeholder="search threads"
        )
      div(class="grid-item 1/3 compact-1/1")
        a(class="btn btn-outline filter-button") Filters
