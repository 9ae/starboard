extends base.pug

mixin result(name, image, link)
  .search-result-item
    img(class="thumbnail-image card-shadow" src=image)
    .thumbnail-label= name

block scripts
  script(
    type="text/javascript"
    src="js/dashboard.js"
  )

block content
  - var mydoms = [fandoms['harry_potter'], fandoms['buffy'], fandoms['night_circus']]
  - var digimon = [fandoms['digimon_adv'], fandoms['digimon_tam'], fandoms['digimon_front']]
  div(class="container")
    div(class="section")
      h2 Discover Fandoms
      input(
        id="search_bar"
        type="search"
        placeholder="Find your fandom"
        class="search"
        onFocus="onSearch(this.event)"
      )
      div(
        id="search_results"
        class="search-results"
      )
        each dom in digimon
          +result(dom.name, dom.image)
  
