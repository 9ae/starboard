extends base.pug

mixin result(name, image, link)
  div(class="grid-item 1/2")
    a(href=link)
      .search-result-item
        img(class="thumbnail-image" src=image)
        .thumbnail-label= name

block scripts
  script(
    type="text/javascript"
    src="js/dashboard.js"
  )

block content
  
  div(class="container")
    div(class="section")
      h2 Discover Fandoms
      input(
        id="search_bar"
        type="search"
        placeholder="Find your fandom"
        class="search"
        onFocus="onSearch(this.event)"
      )
      div(
        id="search_results"
        class="grid search-results"
      )
        +result("Harry Potter", "/images/hp_th.jpg", "/fandom/harry_potter")
